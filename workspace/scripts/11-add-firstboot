set -x
set -e

export LC_ALL=C


source /common.sh
install_cleanup_trap



cp /files/system/systemd/firstboot.service /lib/systemd/system/
cd /etc/systemd/system/multi-user.target.wants && ln -s /lib/systemd/system/firstboot.service .


if [ -n "$LEADER" ] && [ -n "$WORKER" ]; then
    cp /files/bash/firstboot_leader_and_worker.sh /boot/firstboot.sh
elif [ -n "$LEADER" ]; then
    cp /files/bash/firstboot_leader.sh /boot/firstboot.sh
elif [ -n "$WORKER" ]; then
    cp /files/bash/firstboot_worker.sh /boot/firstboot.sh
fi