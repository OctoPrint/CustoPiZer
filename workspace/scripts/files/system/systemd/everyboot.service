[Unit]
Description=Runs everyboot.sh on the first boot of the Raspberry Pi. If successful, it will modify itself to not run again.
Before=rc-local.service
After=network.target
ConditionFileNotEmpty=/usr/local/bin/everyboot.sh

[Service]
ExecStart=/usr/local/bin/everyboot.sh
Type=oneshot
RemainAfterExit=no

[Install]
WantedBy=multi-user.target