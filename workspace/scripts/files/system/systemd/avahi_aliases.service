[Unit]
Description=Publish an alias for %H.local via mdns
Wants=network-online.target
After=network-online.target start_raspap.service

[Service]
ExecStart=/bin/bash /usr/local/bin/avahi_aliases.sh
ExecStartPost=pio log -m "%n successful" -n systemd
Type=simple
RuntimeMaxSec=14400

[Install]
WantedBy=multi-user.target
