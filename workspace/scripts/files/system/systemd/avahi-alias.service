[Unit]
Description=Publish an alias for %H.local via mdns
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
ExecStart=/bin/bash -c "/usr/bin/avahi-publish -a -R $(crudini --get /home/pioreactor/.pioreactor/config.ini ui domain_alias) $(avahi-resolve -4 -n %H.local | cut -f 2)"
Restart=always
RuntimeMaxSec=14400
RestartSec=30

[Install]
WantedBy=multi-user.target
